{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["vite/client", "node"], // أضفنا "node" هنا
    "lib": ["ESNext", "DOM", "DOM.Iterable"] // أضفنا "DOM.Iterable"
  },
  "include": ["client/src", "shared", "server"],
  "exclude": ["node_modules", "dist", "docs"] // أضفنا "docs"
}
