{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@assets/*": ["./client/assets/*"]
    },
    "types": ["vite/client", "node"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "**/*.test.ts"
  ]
}
